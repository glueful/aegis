{
    "name": "glueful/aegis",
    "description": "Aegis: Role-Based Access Control extension for Glueful",
    "type": "glueful-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Glueful Team"
        }
    ],
    "require": {
        "php": ">=8.1"
    },
    "require-dev": {
        "glueful/framework": "dev-main",
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "Glueful\\Extensions\\Aegis\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Glueful\\Extensions\\Aegis\\Tests\\": "tests/"
        }
    },
    "extra": {
        "glueful": {
            "name": "Aegis",
            "displayName": "Aegis",
            "description": "Modern, hierarchical role-based access control system",
            "version": "1.1.0",
            "icon": "assets/icon.png",
            "galleryBanner": {
                "color": "#2563EB",
                "theme": "dark"
            },
            "categories": ["authentication", "authorization", "security"],
            "publisher": "glueful-team",
            "provider": "Glueful\\Extensions\\Aegis\\Services\\AegisServiceProvider",
            "requires": {
                "glueful": ">=1.0.0",
                "extensions": []
            }
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyse": "phpstan analyse src tests --level=8"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
